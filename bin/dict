#!/usr/bin/env zsh

. ~/.config/zsh/alias.zsh

function fold {
  if [ $# -eq 0 ]; then
    /usr/bin/fold -w $COLUMNS -s
  else
    /usr/bin/fold $*
  fi
}

word=$(cat ~/raw/words_alpha.txt | sed 's/.$//' | fzf --preview 'wn {} -over | fold' --preview-window=up:60%)

firefox "https://duckduckgo.com/?q=$word%20meaning%20merriam%20webster%20urban%20dictionary&t=newext&atb=v480-7&ia=web"
wn $word -over | less

~/.config/bin/dict
