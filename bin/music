#!/usr/bin/env zsh
. ~/.config/zsh/alias.zsh

selected=`(fd . ~/Music ~/Videos -t d --format {/} ;fd . "/mnt/c/Users/$win_username/Music/" "/mnt/c/Users/$win_username/Videos" -t d  ) | dmenu`
toupdate="$(echo 'y\nn\nupdate?' | dmenu)"
shuffle="$(echo 'y\nn\nshuffle?' | dmenu)"

if [[ "$(tr -cd '/' <<< "$selected" | wc -c)" -lt 1 ]]; then
  selected=`fd "$selected" "/mnt/c/Users/$win_username/Music/" "/mnt/c/Users/$win_username/Videos" -t d`
fi

if [ "$toupdate" = "y" ]; then
  "$selected/download" &
fi

if [ "$shuffle" = "n" ]; then
  vlc.exe `wslpath -w  "$selected"`
else
  vlc.exe --random --loop `wslpath -w  "$selected"`
fi
