#!/usr/bin/env zsh

. ~/.config/zsh/alias.zsh
selected=`echo "$bookmarked_folders" | xargs fd  . | dmenu`

explorers="default
nvim
firefox"

wpath=`wslpath -w "$selected"`

opener=$(echo $explorers | dmenu)
if [ "$opener" = "firefox" ]; then
  firefox "$wpath"
elif [ "$opener" = "nvim" ]; then
   nvim  "$selected"
elif [ "$opener" = "default" ]; then
  echo "$selected" | xargs -I{} wsl-open '{}'
fi
