#!/usr/bin/env zsh

. ~/.config/zsh/alias.zsh
selected=`echo "$bookmarked_folders" | xargs fd  . | dmenu`

explorers="linux
win"

wpath=`wslpath -m "$selected"`

opener=$(echo $explorers | dmenu)
if [ "$opener" = "win" ]; then
  echo "$wpath" | copy

elif [ "$opener" = "linux" ]; then
  echo "$selected" | copy
fi
