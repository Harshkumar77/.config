#!/usr/bin/env zsh

. ~/.config/zsh/alias.zsh
selected=`echo "$bookmarked_folders" | xargs fd  . | dmenu`

explorers="linux
win"

wpath=`wslpath -w "$selected"`

opener=$(echo $explorers | dmenu)
if [ "$opener" = "win" ]; then
  copyq tab '&clipboard' add "echo $wpath"
elif [ "$opener" = "linux" ]; then
  copyq tab '&clipboard' add "$selected"
fi
